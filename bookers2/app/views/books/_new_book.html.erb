 <h2 class="mt-3">New book</h2>
      <%= form_with model: book,url: books_path , local:true do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>opinion</h4>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'create book', class:"btn btn-sm btn-success"%>
        </div>
      <% end %>